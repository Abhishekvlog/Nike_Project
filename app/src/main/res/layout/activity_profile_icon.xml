<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomeIcons.ProfileIcon">

    <ImageView
        android:id="@+id/TvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="687dp"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/TvSearchbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="685dp"
        android:layout_toRightOf="@id/TvHome"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/TvFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_toRightOf="@+id/TvSearchbar"
        android:layout_marginTop="688dp"
        android:src="@drawable/favorite" />

    <ImageView
        android:id="@+id/TvBag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_toRightOf="@+id/TvFavorites"
        android:layout_marginTop="690dp"
        android:src="@drawable/bag" />

    <ImageView
        android:id="@+id/TvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_toRightOf="@+id/TvBag"
        android:layout_marginTop="690dp"
        android:src="@drawable/identity" />

    <ImageView
        android:id="@+id/profileUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140sp"
        android:layout_marginTop="80sp"
        android:src="@drawable/account" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileUpload"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10sp"
        android:text="Abhishek"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btnedittext"
        android:layout_width="150sp"
        android:layout_height="35sp"
        android:layout_below="@id/username"
        android:layout_marginStart="115sp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/event"
        android:layout_below="@id/btnedittext"
        android:layout_marginTop="50sp"
        android:layout_marginStart="50sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event"
        android:text="Event"
        android:textColor="@color/black"
        android:layout_marginTop="5sp"
        android:layout_marginStart="50sp"/>
    <View
        android:layout_width="1sp"
        android:layout_height="30sp"
        android:layout_marginStart="120sp"
        android:background="#C4C4C4"
        android:layout_marginTop="50sp"
        android:layout_below="@id/btnedittext"
        />
    <ImageView
        android:id="@+id/idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/idcard"
        android:layout_below="@id/btnedittext"
        android:layout_marginTop="50sp"
        android:layout_marginStart="170sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event"
        android:text="Id Card"
        android:textColor="@color/black"
        android:layout_marginTop="5sp"
        android:layout_marginStart="170sp"/>
    <View
        android:layout_width="1sp"
        android:layout_height="30sp"
        android:layout_marginStart="250sp"
        android:background="#C4C4C4"
        android:layout_marginTop="50sp"
        android:layout_below="@id/btnedittext"
        />
    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting"
        android:layout_below="@id/btnedittext"
        android:layout_marginTop="50sp"
        android:layout_marginStart="290sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event"
        android:text="Setting"
        android:textColor="@color/black"
        android:layout_marginTop="5sp"
        android:layout_marginStart="290sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="#C4C4C4"
        android:layout_marginTop="40sp"
        android:layout_below="@id/event"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event"
        android:text="Inbox"
        android:textColor="@color/black"
        android:layout_marginTop="70sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="20sp"/>
    <TextView
        android:id="@+id/texmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event"
        android:text="View message"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_marginTop="90sp"
        android:layout_marginStart="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#C4C4C4"
        android:layout_marginTop="20sp"
        android:layout_below="@id/texmessage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texmessage"
        android:text="Your Nike Member Rewards"
        android:textColor="@color/black"
        android:layout_marginTop="40sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="20sp"/>
    <TextView
        android:id="@+id/reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texmessage"
        android:text="2 available"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_marginTop="60sp"
        android:layout_marginStart="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="#C4C4C4"
        android:layout_marginTop="30sp"
        android:layout_below="@id/reward"
        />
    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reward"
        android:text="Following"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="60sp"
        android:layout_marginStart="20sp"/>

    <Button
        android:id="@+id/interest"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/following"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:background="@drawable/rectangle2"
        android:gravity="center"
        android:text="follow interests" />
</RelativeLayout>