<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="SignAndLogin.SigIn">


    <ImageView
        android:id="@+id/tvsigninlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvemailtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email to join us or sign in."
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/tvindia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India "
        android:layout_marginStart="20sp"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_margin="15dp"/>

   
    <TextView
        android:id="@+id/tvTermsAndCondition1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By continuing, I agree to Nike;s \nPrivacy policy and Term of Use."
        android:layout_marginStart="20sp"/>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="300sp"
        android:layout_height="65sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Next"
        android:background="@drawable/rectangle"
        android:textAllCaps="false"
        android:textColor="@color/white"/>


</LinearLayout>