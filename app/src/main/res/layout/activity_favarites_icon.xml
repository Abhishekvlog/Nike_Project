<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomeIcons.FavaritesIcon">

    <ImageView
        android:id="@+id/TvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="687dp"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/TvSearchbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="685dp"
        android:layout_toRightOf="@id/TvHome"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/TvFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_toRightOf="@+id/TvSearchbar"
        android:layout_marginTop="688dp"
        android:src="@drawable/favorite" />

    <ImageView
        android:id="@+id/TvBag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_toRightOf="@+id/TvFavorites"
        android:layout_marginTop="690dp"
        android:src="@drawable/bag" />

    <ImageView
        android:id="@+id/TvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_toRightOf="@+id/TvBag"
        android:layout_marginTop="690dp"
        android:src="@drawable/identity" />
    <TextView
        android:id="@+id/textFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="10sp"/>

    <TextView
        android:id="@+id/telltogoshopig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFav"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:text="Item added to your Wish List will be saved here."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/favShopNow"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="600sp"
        android:background="@drawable/rectangle"
        android:text="Shop Now"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/nameofiteminfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/telltogoshopig"
        android:text="Name of an item"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"/>


</RelativeLayout>